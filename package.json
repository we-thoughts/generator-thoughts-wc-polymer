{
  "name": "generator-thoughts-wc-polymer",
  "version": "0.0.1",
  "description": "A web component scaffolding based on polymer.",
  "homepage": "https://thoughts.vip",
  "author": {
    "name": "cigaret",
    "email": "kcigaret@outlook.com",
    "url": "https://thoughts.vip"
